{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["dist"],
  "extends": ["airbnb-base", "prettier"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/webpack.config.common.js"
      }
    }
  },
  "plugins": ["prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["warn", { "printWidth": 100 }],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-param-reassign": "off",
    "func-names": ["warn", "never"],
    "max-len": ["error", { "code": 100 }]
  }
}
